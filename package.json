{
  "name": "linemod-core",
  "version": "0.1.1",
  "description": "Comment driven line modifications",
  "homepage": "http://github.com/voxpelli/linemod-core",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/linemod-core.git"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": "./index.js"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "index.d.ts.map",
    "lib/utils.js",
    "lib/utils.d.ts",
    "lib/utils.d.ts.map"
  ],
  "scripts": {
    "build:0": "run-s clean",
    "build:1-declaration": "tsc -p declaration.tsconfig.json",
    "build": "run-s build:*",
    "check:dependency-check": "dependency-check *.js 'test/**/*.js' --no-dev",
    "check:installed-check": "installed-check",
    "check:lint": "eslint .",
    "check:tsc": "tsc",
    "check": "run-s clean && run-p check:*",
    "clean:declarations": "rm -rf $(find . -maxdepth 2 -type f -name '*.d.ts')",
    "clean": "run-p clean:*",
    "prepublishOnly": "run-s build",
    "sync-gh-actions:lint": "ghat voxpelli/ghatemplates/lint",
    "sync-gh-actions:nodejs": "ghat voxpelli/ghatemplates/nodejs --set jobs.test.strategy.matrix.node_version=\\[12,14,15\\]",
    "sync-gh-actions": "run-p sync-gh-actions:*",
    "test:mocha": "c8 --reporter=lcov --reporter text mocha 'test/**/*.spec.js'",
    "test-ci": "run-s test:*",
    "test": "run-s check test:*"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "keywords": [],
  "author": "Pelle Wessman <pelle@kodfabrik.se> (http://kodfabrik.se/)",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^12.19.16",
    "@voxpelli/eslint-config": "11.0.1",
    "@voxpelli/eslint-config-jsdoc-ts": "^0.3.1",
    "c8": "^7.5.0",
    "chai": "^4.3.0",
    "dependency-check": "^4.1.0",
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^35.2.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^33.0.1",
    "ghat": "^0.14.0",
    "husky": "^4.3.8",
    "installed-check": "^4.0.0",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.1.3"
  }
}
